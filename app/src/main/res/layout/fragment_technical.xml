<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/filename_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filename_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/filename_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/path_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/path_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/path_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/file_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_size_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/file_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/codec_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codec_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/codec_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sample_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_rate_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/sample_rate_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bitrate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bitrate_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/bitrate_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag_version_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_version_label"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tag_version_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>